<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "me.johnbot.alokreader"
        version     = "0.0.70"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
        <!-- <preference name="phonegap-version" value="3.5.0" /> -->

        <name>A-LOK Angle Reader App</name>
        <description>Records angle measurements</description>
        <author href="http://johnbot.me" email="johnjwesthoff@gmail.com">
        John Westhoff
        </author>
        
        <icon src="icon.png" />
        
        <gap:platform name="android" />
        <gap:platform name="ios" />

        <preference name="permissions" value="none"/>
        <preference name="orientation" value="portrait" />
        
        <plugin name="org.apache.cordova.device" source="pgb" spec="0.2.12" />
        <plugin name="org.apache.cordova.device-orientation" source="pgb" spec="0.3.9" />
        <plugin name="org.apache.cordova.file" source="pgb" spec="1.3.3" />
        <plugin name="cordova-plugin-dialogs" spec="1.1.1" source="pgb" />
        
    </widget>
